<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_white"
    >

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/relative_layout_me_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:elevation="1dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:id="@+id/cardView">
            <RelativeLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                >
                <pl.bclogic.pulsator4droid.library.PulsatorLayout
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:id="@+id/pulsator"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:pulse_count="4"
                    app:pulse_duration="6000"
                    app:pulse_repeat="0"
                    app:pulse_color="@color/white"
                    app:pulse_startFromScratch="false"
                    app:pulse_interpolator="Linear">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_view_profile_me_fragment"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profile"
                        app:civ_border_width="0dp"
                        app:civ_border_color="#FF000000"/>
                </pl.bclogic.pulsator4droid.library.PulsatorLayout>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/text_view_profile_me_fragment"
                    android:layout_marginTop="120dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Robinson Cruso "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="7dp"
            app:cardElevation="2dp"
            android:elevation="2dp"
            app:cardMaxElevation="1dp"
            android:layout_marginTop="148dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:id="@+id/linear_layout_me_fragment_followers"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/text_view_followers_count_fragmenet_me"
                        android:textColor="@color/primary_text"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:text="-"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/primary_text_light"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:text="Followers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_layout_me_fragment_followings"
                    android:background="@drawable/border_left_me"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/text_view_following_count_fragmenet_me"
                        android:textColor="@color/primary_text"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="-"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/primary_text_light"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Following"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/border_left_me"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/text_view_ringtones_count_fragmenet_me"
                        android:textColor="@color/primary_text"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:text="-"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/primary_text_light"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:text="ringtones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v4.widget.SwipeRefreshLayout
            android:elevation="1dp"
            android:id="@+id/swipe_refreshl_me_fragment"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/cardView">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/linear_layout_page_error"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <include layout="@layout/error_page" />
                </LinearLayout>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/image_view_empty"
                    app:srcCompat="@drawable/bg_empty_me"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.RecyclerView
                    android:visibility="visible"
                    android:id="@+id/recycle_view_me_fragment"
                    android:layout_centerInParent="true"
                    android:layout_height="fill_parent"
                    android:layout_width="match_parent"/>
            </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/relative_layout_load_more"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/loading_bg"
            android:layout_marginBottom="60dp"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <com.leo.simplearcloader.SimpleArcLoader
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:arc_colors="@array/colors_load"
                app:arc_style="simple_arc"
                app:arc_speed="medium"
                app:arc_margin="3dp">

            </com.leo.simplearcloader.SimpleArcLoader>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/linear_layout_me_fragment_me"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_centerHorizontal="true"
                android:id="@+id/image_view_login"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_user_two"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_name_nave_header"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:layout_margin="10dp"
                android:text="@string/please_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/button_login_nav_me_fragment"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="Sign in !"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:theme="@style/Button_login"
                android:elevation="1dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
